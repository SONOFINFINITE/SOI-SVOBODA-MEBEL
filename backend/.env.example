PORT=3001
# Вход в админку: логин и пароль (по умолчанию admin / admin)
ADMIN_LOGIN=admin
ADMIN_PASSWORD=admin
# Секретный токен (выдаётся после входа; можно сгенерировать случайную строку)
ADMIN_TOKEN=admin-secret-token

# SMTP для отправки уведомлений о заказах на почту (адрес получателя задаётся в админке)
# Пример для Gmail: используйте "пароль приложения", не основной пароль
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com
